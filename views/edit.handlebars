<!-- ./views/edit.handlebars -->
<!-- 實作修改功能 Step 1 -->
<form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}}checked{{/if}}>
      </div>
    </div>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{{todo.name}}}">
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Submit</button>
    </div>
  </div>
</form>